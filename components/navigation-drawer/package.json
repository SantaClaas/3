{
  "name": "@claas.dev/dim-navigation-drawer",
  "description": "Webcomponent dim-navigation-drawer following open-wc recommendations",
  "license": "Apache-2.0",
  "author": "Claas",
  "version": "0.1.1",
  "type": "module",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./dim-navigation-drawer.js": "./dist/src/dim-navigation-drawer.js"
  },
  "files": [
    "dist/src"
  ],
  "types": "dist/src/index.d.ts",
  "scripts": {
    "analyze": "cem analyze --litelement",
    "dev": "tsc --watch --preserveWatchOutput",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "build": "tsc && npm run analyze -- --exclude dist",
    "prepublish": "tsc && npm run analyze -- --exclude dist",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore"
  },
  "dependencies": {
    "lit": "^2.0.2",
    "@claas.dev/dim-button": "*"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/eslint-config": "^9.2.1",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@web/dev-server": "^0.1.34",
    "concurrently": "^5.3.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.3.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.4.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2",
    "web-component-analyzer": "^1.1.7"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "no-plusplus": "off",
      "no-continue": "off",
      "spaced-comment": [
        "error",
        "always",
        {
          "markers": [
            "TODO"
          ]
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  }
}
